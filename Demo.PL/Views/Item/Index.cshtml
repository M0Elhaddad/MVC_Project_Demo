@model IEnumerable<ItemViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Items</h1>
<br />
<br />
<a asp-controller="Item" asp-action="Create" class="btn btn-primary">Create New Item</a>

<br />
@if (Model.Count() > 0)
{
    <table class="mt-4 table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(S => S.Name)</th>
                <th>@Html.DisplayNameFor(S => S.Description)</th>
                <th>Detales</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Item in Model)
            {
                <tr>
                    <td>@Item.Name</td>
                    <td>@Item.Description</td>

                    <partial name="_ButtonPartial" model="@Item.Id.ToString()" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 p-4 alert-warning">
        <h2>There is No Items!!</h2>
    </div>
}



