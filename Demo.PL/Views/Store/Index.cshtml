@model IEnumerable<StoreViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Stores</h1>
<br />
<br />
<a asp-controller="Store" asp-action="Create" class="btn btn-primary">Create New Store</a>

<br />
@if (Model.Count() > 0)
{
    <table class="mt-4 table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(S => S.Code)</th>
                <th>@Html.DisplayNameFor(S => S.Name)</th>
                <th>@Html.DisplayNameFor(S => S.DateOfCreation)</th>
                <th>Detales</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var store in Model)
            {
                <tr>
                    <td>@store.Code</td>
                    <td>@store.Name</td>
                    <td>@store.DateOfCreation</td>

                    <partial name="_ButtonPartial" model="@store.Id.ToString()" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 p-4 alert-warning">
        <h2>There is No Stores!!</h2>
    </div>
}



